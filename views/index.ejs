<% include ../views/partials/header %>
<!--- <h1><%= title %></h1> -->
<div class="jumbotron jumbotron-fluid" id="front_jumbo">
  <div class="container">
    <h1 class="display-4">Sportsblog</h1>
    <p class="lead">A simple and clean sports based blog</p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <% articles.forEach(function(article) { %>
      <a href="/articles/show/<%= article._id %>"><h2><%= article.title %></h2></a>
      <h4><%= article.subtitle %></h4>
      <p>
        Posted by <%= article.author %>
        on <%= moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a') %>
      </p>
      <hr>
    <% }) %>
  </div>
</div>
<% include ../views/partials/footer %>
