<div class="row">
  <div class="col-md-12">
    <div class="alert alert-success" role="alert">
      <ul>
      <% messages['success'].forEach(function (message) { %>
        <li><%= message %></li>
      <% }) %>
      </ul>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="alert alert-danger" role="alert">
      <ul>
      <% messages['error'].forEach(function (message) { %>
        <li><%= message %></li>
      <% }) %>
      </ul>
    </div>
  </div>
</div>
